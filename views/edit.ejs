<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Edit Post</title>
  </head>
  <body>
    <%- include('header') %>
    <h1 class="editNew"><%= post ? 'Edit Post' : 'New Post' %></h1>
    <form method="POST" action="<%= post ? '/edit/' + postId : '/new' %>">
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= post ? post.title : '' %>"
        required
      />
      <label for="content">Content:</label>
      <textarea id="content" name="content" required>
<%= post ? post.content : '' %></textarea
      >
      <button type="submit"><%= post ? 'Update' : 'Create' %> Post</button>
    </form>

    <%- include('footer') %>
    <script>
      // Function to save a new post to local storage
      function savePostToLocal() {
        const title = document.getElementById('title').value;
        const content = document.getElementById('content').value;
        savePost(title, content);
      }
    </script>
  </body>
</html>
